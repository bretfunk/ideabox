<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Categories</h1>
  </div>
</div>

<div class="container">
  <table class="table table-hover text-left">
    <thead>
      <tr>

        <th><h3>Name</h3></th>
          <th><h3>Edit</h3></th>
          <th><h3>Delete</h3></th>
        </tr>
      </thead>
      <tbody>

<% @categories.each do |category| %>
  <tr>
<td><h4><%= category.name %></h4></td>
<td><h4><%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-primary" %></h4></td>
<td><h4><%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger" %></h4></td>
  </tr>
<% end %>
      </tbody>
  </table>
</div>

<%= link_to "Add Category", new_admin_category_path, class: "btn btn-success btn-block" %>
