<h1>User Show Page</h1>
<% @user.ideas.each do |idea| %>
<p><%= idea.idea %></p>
<p><%= idea.category.name %></p>
<p><%= link_to "Edit", edit_user_idea_path(idea.user, idea) %>
<p><%= link_to "Destroy", user_idea_path(idea.user, idea), method: :delete %></p>

<% end %>
<%= link_to "Add Idea", new_user_idea_path(@user) %>
