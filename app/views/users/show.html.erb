<h1><%= @user.username %>'s Ideas</h1>
<% @user.ideas.each do |idea| %>
<p><%= link_to idea.idea, user_idea_path(idea.user, idea) %>
  <!-- link category to own page too -->
<p><%= idea.category.name %></p>
<p><%= link_to "Edit", edit_user_idea_path(idea.user, idea) %>
<p><%= link_to "Delete", user_idea_path(idea.user, idea), method: :delete %></p>

<% end %>
<%= link_to "Add Idea", new_user_idea_path(@user) %>
